<%- include('partials/header')%>
<!--  -->
<%- include('partials/nav')%>
<div class="container bg-light p-5">
    <h1>List Of Pending Todos...</h1>
    <p>Welcome to <strong> <%= user.username%></strong> profile</p>
    <hr />
    <h3>Create Todo <a class="btn btn-primary" href="/createtodo">+</a></h3>
    <ul class="list-group w-25">
        <% todos.forEach((todo) => { %>
        <li
            class="list-group-item border-0 mb-3 d-flex justify-content-between"
        >
            <%= todo.title%> <br>
            <%= todo.description %> <br>
            <%= todo.createdAt.toLocaleDateString() %>
            <span>
                <a class="text-decoration-none" href="/updatetodo/<%= todo._id%>"
                    >✏️</a
                >
                <a class="text-decoration-none" href="/deletetodo/<%= todo._id%>"
                    >❌</a
                >
               
            </span>
        </li>
        <%})%>
    </ul>
</div>

<%- include('partials/footer')%>
